{
  "lumishadow_mini_1": {
    "title": "Virtue Axis",
    "instructions": "Answer instinctively. Choose what feels most true, not what sounds best.",
    "questions": [
      {
        "id": "VA1",
        "prompt": "When something breaks in a group, your first instinct is to…",
        "options": [
          { "key": "A", "text": "Restore harmony and protect the vulnerable.", "lum": { "mercy": 2, "protection": 1 }, "sha": { "appeasement": 1 } },
          { "key": "B", "text": "Find the truth of what happened, even if it hurts.", "lum": { "clarity": 2, "judgment": 1 }, "sha": { "detachment": 1 } },
          { "key": "C", "text": "Take control and impose a fix immediately.", "lum": { "strategy": 1, "discipline": 1 }, "sha": { "domination": 2, "control": 1 } },
          { "key": "D", "text": "Walk away. If it’s fragile, it deserves to fall.", "lum": { "stewardship": 1 }, "sha": { "detachment": 2, "avoidance": 1 } }
        ]
      },
      {
        "id": "VA2",
        "prompt": "What do you fear becoming?",
        "options": [
          { "key": "A", "text": "Cruel.", "lum": { "mercy": 2 }, "sha": { "wrath": 1, "pride": 1 } },
          { "key": "B", "text": "Weak.", "lum": { "courage": 1, "discipline": 1 }, "sha": { "insecurity": 2 } },
          { "key": "C", "text": "Irrelevant.", "lum": { "clarity": 1, "wisdom": 1 }, "sha": { "vanity": 2 } },
          { "key": "D", "text": "Controlled by anyone.", "lum": { "stewardship": 2 }, "sha": { "paranoia": 1, "control": 1 } }
        ]
      },
      {
        "id": "VA3",
        "prompt": "The most unforgivable thing is…",
        "options": [
          { "key": "A", "text": "Betrayal.", "lum": { "oath": 2, "loyalty": 1 }, "sha": { "vengeance": 1, "resentment": 1 } },
          { "key": "B", "text": "Cowardice.", "lum": { "courage": 2, "valor": 1 }, "sha": { "contempt": 1, "pride": 1 } },
          { "key": "C", "text": "Hypocrisy.", "lum": { "clarity": 2, "judgment": 1 }, "sha": { "rigidity": 1 } },
          { "key": "D", "text": "Waste of potential.", "lum": { "craft": 1, "discipline": 1 }, "sha": { "perfectionism": 2 } }
        ]
      },
      {
        "id": "VA4",
        "prompt": "If someone challenges your values publicly, you…",
        "options": [
          { "key": "A", "text": "Stay calm and ask questions.", "lum": { "temperance": 2, "clarity": 1 }, "sha": { "avoidance": 1 } },
          { "key": "B", "text": "Make a decisive statement and end it.", "lum": { "stewardship": 1, "judgment": 1 }, "sha": { "pride": 1, "domination": 1 } },
          { "key": "C", "text": "Turn it into a lesson for everyone.", "lum": { "teaching": 2, "wisdom": 1 }, "sha": { "vanity": 1 } },
          { "key": "D", "text": "Feel it for days and plan your next move.", "lum": { "strategy": 2 }, "sha": { "rumination": 2 } }
        ]
      },
      {
        "id": "VA5",
        "prompt": "Your ideal life is defined by…",
        "options": [
          { "key": "A", "text": "Service and protection.", "lum": { "protection": 2, "service": 1 }, "sha": { "self_sacrifice": 1 } },
          { "key": "B", "text": "Mastery and excellence.", "lum": { "craft": 2, "discipline": 1 }, "sha": { "perfectionism": 1 } },
          { "key": "C", "text": "Freedom and self-rule.", "lum": { "stewardship": 1, "temperance": 1 }, "sha": { "isolation": 1, "detachment": 1 } },
          { "key": "D", "text": "Influence and legacy.", "lum": { "clarity": 1, "wisdom": 1 }, "sha": { "vanity": 2 } }
        ]
      }
    ]
  },

